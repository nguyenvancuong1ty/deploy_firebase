{
    "version": 2,
    "builds": [
        {
            "src": "src/dist/server.js",
            "use": "@vercel/node",
            "config": { "includeFiles": ["src/dist/**"] }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "src/dist/server.js",
            "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
            "headers": {
                "Access-Control-Allow-Origin": "*"
            }
        }
    ]
}
